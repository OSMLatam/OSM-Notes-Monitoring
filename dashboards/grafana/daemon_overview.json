{
  "id": null,
  "uid": "osm-notes-daemon",
  "title": "Daemon Overview",
  "tags": ["osm", "monitoring", "ingestion", "daemon"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Daemon Status",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [{
        "datasource": {
          "type": "postgres",
          "uid": "PostgreSQL"
        },
        "editorMode": "code",
        "format": "table",
        "rawQuery": true,
        "rawSql": "SELECT COALESCE((SELECT metric_value::numeric FROM metrics WHERE component = 'ingestion' AND metric_name = 'daemon_status' ORDER BY timestamp DESC LIMIT 1), 0) as value",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          },
          "mappings": [
            {"type": "value", "options": {"0": {"text": "Inactive"}, "1": {"text": "Active"}}}
          ]
        }
      }
    },
    {
      "id": 2,
