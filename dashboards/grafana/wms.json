{
  "id": null,
  "uid": "osm-notes-wms",
  "title": "Wms Monitoring",
  "tags": ["osm", "monitoring", "wms"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Wms Health Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [{
        "datasource": {
          "type": "postgres",
          "uid": "PostgreSQL"
        },
        "editorMode": "code",
        "format": "table",
        "rawQuery": true,
        "rawSql": "SELECT COALESCE(status, 'unknown') as status, COALESCE(last_check, '1970-01-01'::timestamp) as last_check FROM component_health WHERE component = 'wms'",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "healthy": {"text": "Healthy", "color": "green"},
                "degraded": {"text": "Degraded", "color": "yellow"},
                "down": {"text": "Down", "color": "red"},
                "unknown": {"text": "Unknown", "color": "gray"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "gray"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Key Metrics",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0},
      "targets": [{
        "datasource": {
          "type": "postgres",
          "uid": "PostgreSQL"
        },
        "editorMode": "code",
        "format": "time_series",
        "rawQuery": true,
        "rawSql": "SELECT timestamp AS time, metric_value AS value, metric_name FROM metrics WHERE component = 'wms' AND metric_name IN ('error_rate_percent', 'response_time_ms', 'service_availability') AND timestamp > NOW() - INTERVAL '24 hours' ORDER BY timestamp, metric_name",
        "refId": "A"
      }]
    }
  ],
  "time": {"from": "now-24h", "to": "now"}
}
